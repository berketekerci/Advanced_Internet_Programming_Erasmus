@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@using SchoolRegister.ViewModels.VM
@model IEnumerable<GroupVm>
@{
    ViewData["Title"] = @Localizer["Groups"];
}
<h2>@ViewData["Title"]</h2>
@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="AddOrEditGroup">@Localizer["Create New"]</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="AddOrEditGroup" asp-route-id="@item.Id">@Localizer["Edit"]</a>

                    } |
                    <a asp-action="Details" asp-route-id="@item.Id">@Localizer["Details"]</a> |
                </td>
            </tr>
        }
    </tbody>
</table>
